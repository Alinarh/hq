<div class="page-header">
  <h1>Ошибки при вводе</h1>
</div>

<%= paginate @collisions %>

<table class='table table-hover'>
  <thead>
  <tr>
    <th></th>
    <th></th>
    <th>Студент</th>
    <th>Дисциплина</th>
    <th>Ошибка</th>
    <th></th>
  </tr>
  </thead>
  <tobdy>
    <% @collisions.each do |collision|%>
      <tr>
        <td><%= collision[:student].group.speciality.faculty.abbreviation %></td>
        <td><%= collision[:student].group.name %></td>
        <td><%= collision[:student].person.full_name %></td>
        <td><%= collision[:subject].title %></td>
        <td><%= collision[:error_txt] %></td>
        <td><%= link_to 'Редактировать', edit_study_subject_mark_path(collision[:subject], collision[:mark]) %></td>
      </tr>
    <% end %>
  </tobdy>
</table>