<div class="page-header">
  <h1>
    Оценки <%= @subject.group.name %>
    <br>
    <small>
      <%= @subject.title %>
      (<%= "#{@subject.year}/#{@subject.year + 1}, #{@subject.semester}-й семестр" %>)
    </small>
  </h1>
</div>

<%= link_to 'Добавить', new_study_subject_mark_path, class: 'btn btn-default' %>

<div class='row'>
  <table class='table table-hover'>
    <thead>
    <tr>
      <th>#</th>
      <th>Студент</th>
      <th>Результат</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @m.each do |mark| %>
      <tr>
        <td><%= mark.id %></td>
        <td><%= mark.student.person.full_name %></td>
        <td><%= mark.mark %></td>
        <td><%= link_to 'Редактировать', edit_study_subject_mark_path(@subject, mark) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
 </div> 