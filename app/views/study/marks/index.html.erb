<div class="page-header">
  <h1>
    Оценки <%= @subject.group.name %>
    <br>
    <small>
      <%= @subject.title %>
      (<%= "#{@subject.year}/#{@subject.year + 1}, #{@subject.semester}-й семестр" %>)
    </small>
  </h1>
</div>

<%= link_to 'Добавить', new_study_subject_mark_path, class: 'btn btn-default' %>

<div class='row'>
  <table class='table table-hover'>
    <thead>
    <tr>
      <th>#</th>
      <th>Студент</th>
      <th>Результат</th>
      <th>Пересдача</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
      <% @discipline_students.each  do |student| %>
        <tr class="<%= 'danger' if (student['marks'].size > 1 or student['retakes'].size > 1 ) %>">
          <td><%= student['id'] %></td>
          <td><%= student['name'] %></td>
          <td>
            <% student['marks'].each do |mark| %>
              <% if mark.subject.exam? %>
                <%= mark.mark %>
              <% else %>
                <%= mark.test %>
              <% end %>
            <% end %> 
          </td>
          <td>
            <% student['retakes'].each do |retake| %>
              <% if retake.retake == nil %>
                <%= 'нет' %>
              <% else %>
                <%= retake.retake %>
              <% end %>
            <% end %> 
          </td>
          <td><%= link_to  'Редактировать', edit_study_subject_mark_path(@subject, student['marks'].first) %></td>
       </tr>
      <% end %> 
    </tbody>
  </table>
 </div> 