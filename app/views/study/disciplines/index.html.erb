<div class="page-header">
  <h1>Балльно-рейтинговая система</h1>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= link_to new_study_discipline_path, class: 'btn btn-default' do %>
      <span class='glyphicon glyphicon-plus'></span> Добавить дисциплину
    <% end %>
  </div>
</div>

<% if @disciplines %>
<table class="table table-striped">
  <tbody>
    <% @disciplines.each do |d| %>
      <tr>
        <td class="text-muted"><%= d.id %></td>
        <td>
          <p><%= d.name %></p>
          <p>
            <strong><%= d.group.name %></strong>,
            <%= study_year(d.year) %> учебный год, <%= study_term(d.term) %>
          </p>

          <p>Ведущий преподаватель: <%= d.lead_teacher.full_name %></p>
          <% unless d.assistant_teachers.empty? %>
            <p>Дополнительные преподаватели:</p>
            <ul>
              <% d.assistant_teachers.each do |t| %>
                <li><%= t.full_name %></li>
              <% end %>
            </ul>
          <% end %>
        </td>
        <% if d.is_active? %>
          <td>
            <%= link_to study_discipline_checkpoints_path(d), class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-list-alt"></span> Внести данные
            <% end %>
          </td>
          <td>
            <%= link_to edit_study_discipline_path(d), class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-edit"></span> Редактировать
            <% end %>
          </td>
        <% else %>
          <td colspan="2">
            <p class="text-muted">Учебный семестр завершён.</p>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody> 
</table>
<% else %>
<p class="lead">
  Нет дисциплин, закреплённых за вами.
</p>
<% end %>