<div class="page-header">
  <h1>Экзамен/зачет</h1>
</div>

<%= form_for @subject, html: { class: 'form-horizontal' } do |f| %>
  <%= f.fields_for @subject do |p| %>
      <div class="row">
        <%= p.label :year, 'Год', class: 'col col-lg-2 control-label' %>
        <div class="col col-lg-10">
            <%= p.text_field :year %>
        </div>
      </div>
      <div class="row">
        <%= p.label :semester, 'Семестр', class: 'col col-lg-2 control-label' %>
        <div class="col col-lg-10">
            <%= p.text_field :semester %>
        </div>
      </div>
      <div class="row">
        <%= p.label :group_id, 'Группа', class: 'col col-lg-2 control-label' %>
        <div class="col col-lg-10">
            <%= p.text_field :group_id %>
        </div>
      </div> 
      <div class="row">
        <%= p.label :title, 'Дисциплина', class: 'col col-lg-2 control-label' %>
        <div class="col col-lg-10">
            <%= p.text_field :title%>
        </div>
      </div> 
      <div class="row">
        <%= p.label :kind, 'Форма отчетности', class: 'col col-lg-2 control-label' %>
        <div class="col col-lg-10">
            <%= p.text_field :kind %>
        </div>
      </div>
    <% end %>
     <%= f.submit 'Сохранить', class: 'btn btn-primary'%>
  <% end %>