<div class="page-header">
  <h1>Пользователи системы</h1>
</div>

<%= link_to new_user_path, class: 'btn btn-primary' do%>
  <span class='glyphicon glyphicon-plus'></span> Добавить нового пользователя
<% end %>
<br><br><br>
<%= render 'filter' %>

<div id='user-paginator'>
  <%= paginate_with_info @users %>
</div>

<table id="users" class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>#</th>
    <th>Имя</th>
    <th>Должности</th>
    <th>Логин</th>
    <th>Телефон</th>
    <th></th>
  </tr>
  </thead>
  <tbody id="for_users">
  <% @users.includes(:positions, :departments).each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.full_name %></td>
      <td>
        <ul class="list-unstyled">
          <% user.positions.each do |p| %>
            <li><%= p.info %></li>
          <% end %>
        </ul>
      </td>
      <td><%= user.username %></td>
      <td class="nowrap"><%= user.phone %></td>
      <td>
        <%= link_to 'Редактировать', edit_user_path(user) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
