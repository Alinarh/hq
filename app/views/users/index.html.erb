<div class="row">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th><span class="line"></span>Имя</th>
      <th><span class="line"></span></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.full_name %></td>
        <td>
          <%= link_to 'Редактировать', edit_user_path(user) %>
