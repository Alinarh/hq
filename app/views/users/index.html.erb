<div class="row">
  <div class="pull-right">
    <%= link_to new_user_path, class: 'btn-glow primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Создать пользователя
    <% end %>
  </div>
  <h4>Пользователи системы</h4>
</div>
<div class="row">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th><span class="line"></span>Имя</th>
      <th><span class="line"></span>Имя для входа</th>
      <th><span class="line"></span>Телефон</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.full_name %></td>
        <td><%= user.username %></td>
        <td class="nowrap"><%= user.phone %></td>
        <td>
          <%= link_to 'Редактировать', edit_user_path(user) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
