<%= form_for Position.new, html: { class: 'form-horizontal' }  do |f| %>
  <%= hidden_field_tag 'position[user]', @user.id %>

 	<div class="row">
    <div class="col col-lg-3">
      <%= f.text_field :title, { placeholder: 'Старший преподаватель', class: 'form-control'} %>
    </div>
    <div class="col col-lg-2">
      <%= f.collection_select :role, Role.all, :id, :title, { label: false }, { style: 'width: 145px;', class: 'form-control' }  %>
    </div>
    <div class="col col-lg-2">
      <%= f.collection_select :department, Department.all, :id, :abbreviation, { label: false }, { style: 'width: 130px;' , class: 'form-control'}  %>
    </div>
    <div class="col col-lg-2">
      <%= text_field_tag 'position[appointment]', Date.today, class: 'datepicker form-control' %>
    </div>
  </div>


   <div class="row">
    <div class="col col-lg-10 col-offset-2">
      <%= f.submit class: 'btn btn-primary' %>
      или
      <%= link_to 'назад ко всем сотрудникам', users_path %>
    </div>
  </div>
  
<% end %>