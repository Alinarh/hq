<!DOCTYPE html>
<html>
<head>
  <title>Matrix</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <a class="navbar-brand" href="<%= root_url %>">
      <strong>Матрица</strong>.HQ
    </a>

    <%= render_navigation context: :auth, renderer: :navbar, expand_all: true %>
  </div>

  <div class="container">
    <div class="row">
      <%= render_navigation context: :sidebar %>
      <div class="col-lg-10">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
