<!DOCTYPE html>
<html>
<head>
  <title>Matrix</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
  <a id="matrixHQ" class="navbar-brand" href="<%= root_url %>">
    <strong>Матрица</strong>
  </a>

  <%= render_navigation context: :auth, renderer: :navbar, expand_all: true %>
</div>

<div class="container">
  <div class="row">
    <div id="page_sidebar" class="col-sm-3 hidden-print">
      <%= link_to '#', class: 'btn btn-block btn-warning btn-lg', id: 'trip' do %>
        <span class='glyphicon glyphicon-comment'></span> Помощь
      <% end %>
      <br>
      <%= render_navigation context: :sidebar, expand_all: true %>
    </div>
    <div class="col-sm-9">
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
