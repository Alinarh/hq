<%= form_for @session, html: { class: 'form-horizontal' } do |f| %>
 <%= hidden_field_tag 'session[user_id]', current_user %>

	<div class='row'>
		<%= f.label :year, 'Год', class: 'control-label' %>
		<%= f.select :year, options_for_select(['2013', '2012', '2011']) %>
	</div>
		
	<div class='row'>
		<%= f.label :semester, 'Семестр', class: 'control-label' %>
		<%= f.select :semester, options_for_select(['осенний', 'весенний']) %>
	</div>


	<div class='row'>
		<%= hidden_field_tag 'ajax-faculty' %>
		<ul class="nav nav-pills pill-select" name='pillfaculty' id='pillfaculty'>
				<% Department.faculties.without(id: 1).without(id: 8).each do |f| %>
        <li><a  data-toggle='pill' data-value="<%=f.id%>" data-input='ajax-faculty' href="#"><%= f.abbreviation %></a></li>
        <% end %>
    </ul>
			
  </div>             

		<div class='row'>
			<%= select_tag 'course',
                  options_for_select([1, 2, 3, 4, 5, 6], params[:course]),
                     prompt: 'все курсы', class: 'chzn-select ajax-course' %>
		</div>

		<div class='row'>
			<%= select_tag 'form',
                    options_for_select([['очная', 101], ['очно-заочная', 102], ['заочная', 103], ['дистанционная', 105]], params[:form]), prompt: 'все формы', class: 'chzn-select ajax-form' %>
		</div>
			
		<div class='row'>
				<%= select_tag 'speciality',
                options_from_collection_for_select(Speciality.all, :id, :name),
                prompt: 'все специальности', class: 'chzn-select ajax-speciality' %>
		</div>

		<div class='row'>
			<%= f.select :group_id,
                options_from_collection_for_select(Group.all, :id, :name), {prompt: 'все группы'}, { class: 'chzn-select ajax-group_id' } %>
    </div>

      
    <div class='row'>
			<%= f.label :subject, 'Дисциплина', class: 'control-label' %>
			<%= f.text_field :subject, placeholder: 'математика' %>
		</div>

		 <div class='row'>
			<%= f.label :type, 'Форма отчетности', class: 'control-label' %>
			<%= f.select :type, options_for_select([['экзамен', 1], ['зачет', 2]]), {},multiple: false %>
			</div>

		
		<%= f.submit 'Заполнить', class: 'btn btn-primary' %>

<% end %>