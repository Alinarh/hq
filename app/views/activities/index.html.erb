<div class="page-header">
  <h1>Показатели эффективности НПР</h1>
</div>

<%= link_to 'Добавить новый', new_activity_path, class: 'btn btn-default' %>

<table class="table">
  <thead>
  <tr>
    <th>#</th>
    <th>Название</th>
    <th>Описание</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @activities.each do |a| %>
    <tr>
      <td><%= a.id %></td>
      <td><%= a.name %></td>
      <td>
        <small><%= a.description %></small>
      </td>
      <td>
        <%= link_to edit_activity_path(a), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-edit"></span>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>