<ul class="nav nav-tabs">
  <li><a href="<%= student_path(@student) %>">Персональная информация</a></li>
  <li><a href="<%= student_study_path(@student) %>">Учебная информация</a></li>
  <li class="active"><a href="<%= student_orders_path(@student) %>">Приказы</a></li>
  <li><a href="<%= student_documents_path(@student) %>">Документы</a></li>
  <li><a href="<%= student_grants_path(@student) %>">Выплаты и стипендии</a></li>
</ul>
<br>
<div class="page-header">
  <h1><%= @student.person.full_name %> <small><%= @student.group.name %></small></h1>
  <h2>Приказы студента</h2>
</div>

<table class="table">
  <thead>
    <tr>
      <th colspan="3">#</th>
      <th>Статус</th>
      <th>Тип приказа</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @student.orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td></td>
        <td></td>
        <td><%= order.number %> от <%= l order.signing_date, format: '%d.%m.%Y' %></td>
        <td><%= order.template.name if order.template %></td>
        <td>
          <%= link_to '#', class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
        </td>
        <td>
          <%= link_to '#', class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-print"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>