<%= form_tag nil, method: :get, class: 'filter-block' do %>
  <div class="row">
    <div class="col col-lg-3 pull-right">
      <%= submit_tag 'Искать', class: 'btn btn-primary' %>

      <%= link_to students_path, class: 'btn btn-danger pull-right' do %>
        <span class="glyphicon glyphicon-remove"></span>
      <% end %>
    </div>
    <div class="col col-lg-3">
      <%= text_field_tag 'name', params[:name], placeholder: 'Фамилия, имя, отчество' %>
    </div>
    <div class="col col-lg-3">
      <%= select_tag 'status',
                     options_from_collection_for_select(Status.all, :id, :name, params[:status]),
                     multiple: true, class: 'chzn-select', data: { placeholder: 'все статусы' } %>
    </div>
    <div class="col col-lg-3">
      <select>
        <option>все квалификации</option>
      </select>
    </div>
  </div>
  <div class="row">
    <div class="col col-lg-3">
      <%= select_tag 'faculty',
                     options_from_collection_for_select(Department.faculties, :id, :abbreviation, params[:faculty]),
                     multiple: true, class: 'chzn-select', data: { placeholder: 'все факультеты' } %>
    </div>
    <div class="col col-lg-3">
      <%= select_tag 'form', options_for_select([['очная', 101], ['очно-заочная', 102], ['заочная', 103], ['дистанционная', 105]], params[:form]),
                     multiple: true, class: 'chzn-select', data: { placeholder: 'все формы' } %>
    </div>
    <div class="col col-lg-3">
      <%= select_tag 'finance', options_for_select([['бюджетная', 1], ['внебюджетная', 2]], params[:finance]),
                     multiple: true, class: 'chzn-select', data: { placeholder: 'все основы' } %>
    </div>
  </div>
  <div class="row">
    <div class="col col-lg-5">
      <%= select_tag 'speciality',
                     options_from_collection_for_select(Speciality.all, :id, :name, params[:speciality]),
                     multiple: true, class: 'chzn-select', data: { placeholder: 'все специальности' } %>
    </div>
    <div class="col col-lg-2">
      <%= select_tag 'course', options_for_select([1, 2, 3, 4, 5, 6], params[:course]),
                     multiple: true, class: 'chzn-select', data: { placeholder: 'все курсы' } %>
    </div>
    <div class="col col-lg-2">
      <%= select_tag 'group',
                     options_from_collection_for_select(Group.all, :id, :name, params[:group]),
                     multiple: true, class: 'chzn-select', data: { placeholder: 'все группы' } %>
    </div>
  </div>
<% end %>
