<div class="page-header">
  <h1>Выпускники</h1>
</div>

<%= form_for Graduate.new, html: { class: 'form-inline' } do |f| %>
  <div class="form-group">
    <%= f.select :year, options_for_select([['2013/2014', 2013]], 2013), {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.select :group_id, options_from_collection_for_select(@groups, :id, :name), {}, class: 'form-control' %>
  </div>

  <%= f.submit 'Создать выпуск', class: 'btn btn-default' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Группа</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% @graduates.each do |graduate| %>
    <tr>
      <td><%= graduate.id %></td>
      <td class="full-width"><%= graduate.group.name %></td>
      <td><%= link_to 'Дисциплины', edit_graduate_path(graduate) %></td>
      <td><%= link_to 'Студенты', students_graduate_path(graduate) %></td>
    </tr>
  <% end %>
</table>
