<%=  nested_form_for @support, url: my_student_supports_path, method: :post do |f| %>
 <%= f.hidden_field :support_student, value: @student.id %>
 <%= f.hidden_field :year, value: DateTime.now.strftime("%Y") %>
 <%= f.hidden_field :month, value: DateTime.now.strftime("%m") %>

  <% My::SupportCause.all.each do |cause| %>
    <label><%= check_box_tag 'causes[]', cause.id, nil,  id: "cause_#{cause.id}" %>     <%= cause.title %></label>
    <br>
  <% end %>
  <br>

   <div class='row'>
    <div class='col col-lg-2'>
      <%= f.label :series, 'Серия паспорта' %>
    </div>
    <div class='col col-lg-2'>
      <%= f.text_field :series, class: 'form-control', required: 'required'%>
    </div>
   </div>
    <div class='row'>
      <div class='col col-lg-2'>
        <%= f.label :number, 'Номер паспорта' %>
      </div>
      <div class='col col-lg-3'>
        <%= f.text_field :number, class: 'form-control', required: 'required'%>
      </div>
    </div>
    <div class='row'>
      <div class='col col-lg-2'>
        <%= f.label :date, 'Дата выдачи' %>
      </div>
      <div class='col col-lg-3'>
        <%= f.text_field :date, class: 'form-control datepicker', pattern: '[0-9][0-9]\.[0-9][0-9]\.[0-9][0-9][0-9][0-9]', required: 'required'%>
      </div>
    </div>
    <div class='row'>
      <div class='col col-lg-2'>
        <%= f.label :department, 'Кем выдан' %>
      </div>
      <div class='col col-lg-6'>
        <%= f.text_field :department, class: 'form-control', required: 'required'%>
      </div>
    </div>
    <div class='row'>
      <div class='col col-lg-2'>
        <%= f.label :birthday, 'Дата рождения' %>
      </div>
      <div class='col col-lg-3'>
        <%= f.text_field :birthday, class: 'form-control datepicker', pattern: '[0-9][0-9]\.[0-9][0-9]\.[0-9][0-9][0-9][0-9]', required: 'required'%>
      </div>
    </div>
    <div class='row'>
      <div class='col col-lg-2'>
        <%= f.label :phone, 'Мобильный телефон' %>
      </div>
      <div class='col col-lg-6'>
        <%= f.text_field :phone, class: 'form-control', required: 'required'%>
      </div>
    </div>
  <div class='row'>
    <div class='col col-lg-2'>
      <%= f.label :address, 'Адрес регистрации по месту проживания (по паспорту)' %>
    </div>
    <div class='col col-lg-6'>
      <%= f.text_area :address, rows: '4', class: 'form-control', required: 'required'%>
    </div>
  </div>


  <div class='row'>
    <div class='col col-lg-10 col-offset-2'>
      <%= f.submit 'Зарегистрировать и распечатать заявление', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>