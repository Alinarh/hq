<%=  form_tag my_student_supports_path, id: 'support_form' do %>
 <%= hidden_field_tag :student, @student.id %>
 <%= hidden_field_tag :year, DateTime.now.strftime("%Y") %>
 <%= hidden_field_tag :month, DateTime.now.strftime("%m") %>

 <% My::SupportCause.all.each do |cause| %>
    <label><%= check_box_tag 'causes[]', cause.id, nil,  id: "cause_#{cause.id}" %>     <%= cause.title %></label>
    <br>
 <% end %>
  <br>

   <div class='row'>
    <div class='col col-lg-2'>
      <%= label_tag :series, 'Серия паспорта' %>
    </div>
    <div class='col col-lg-2'>
      <%= text_field_tag :series, nil, class: 'form-control', required: 'required'%>
    </div>
   </div>
    <div class='row'>
      <div class='col col-lg-2'>
        <%= label_tag :number, 'Номер паспорта' %>
      </div>
      <div class='col col-lg-3'>
        <%= text_field_tag :number, nil, class: 'form-control', required: 'required'%>
      </div>
    </div>
    <div class='row'>
      <div class='col col-lg-2'>
        <%= label_tag :date, 'Дата выдачи' %>
      </div>
      <div class='col col-lg-3'>
        <%= text_field_tag :date, nil, class: 'form-control datepicker', pattern: '[0-9][0-9]\.[0-9][0-9]\.[0-9][0-9][0-9][0-9]', required: 'required'%>
      </div>
    </div>
    <div class='row'>
      <div class='col col-lg-2'>
        <%= label_tag :department, 'Кем выдан' %>
      </div>
      <div class='col col-lg-6'>
        <%= text_field_tag :department, nil, class: 'form-control', required: 'required'%>
      </div>
    </div>
    <div class='row'>
      <div class='col col-lg-2'>
        <%= label_tag :birthday, 'Дата рождения' %>
      </div>
      <div class='col col-lg-3'>
        <%= text_field_tag :birthday, nil, class: 'form-control datepicker', pattern: '[0-9][0-9]\.[0-9][0-9]\.[0-9][0-9][0-9][0-9]', required: 'required'%>
      </div>
    </div>
    <div class='row'>
      <div class='col col-lg-2'>
        <%= label_tag :phone, 'Мобильный телефон' %>
      </div>
      <div class='col col-lg-6'>
        <%= text_field_tag :phone, nil, class: 'form-control', required: 'required'%>
      </div>
    </div>
  <div class='row'>
    <div class='col col-lg-2'>
      <%= label_tag :address, 'Адрес регистрации по месту проживания (по паспорту)' %>
    </div>
    <div class='col col-lg-6'>
      <%= text_area_tag :address, nil, rows: '4', class: 'form-control', required: 'required'%>
    </div>
  </div>


  <div class='row'>
    <div class='col col-lg-10 col-offset-2'>
      <%= submit_tag 'Зарегистрировать и распечатать заявление', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>