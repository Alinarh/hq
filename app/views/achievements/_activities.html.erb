<div class="panel-group" id="activities_accordeon">
  <% @groups.each do |activity_group, activities| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#activities_accordeon"
             href="#collapse<%= activities[0].activity_group_id %>">
            <%= activity_group %>
          </a>
        </h4>
      </div>
      <div id="collapse<%= activities[0].activity_group_id %>" class="panel-collapse collapse">
        <div class="panel-body">
          <table class="table table-striped">
            <% activities.each do |a| %>
              <tr>
                <td style="width: 100%;">
                  <p><%= a.name %></p>
                  <p>
                    <small><%= a.description %></small>
                  </p>

                  <%= form_for Achievement.new, namespace: "a#{a.id}", html: { style: 'display: none;' } do |f| %>
                    <%= f.hidden_field :achievement_period_id, value: @period.id %>
                    <%= f.hidden_field :activity_id, value: a.id %>

                    <div class="form-group">
                      <%= f.label :description %>
                      <%= f.text_area :description, class: 'form-control' %>
                      <p class="help-block">
                        <strong>Пример</strong> <%= a.placeholder %>
                      </p>
                    </div>

                    <%= f.submit 'Сохранить', class: 'btn btn-primary' %> или
                    <%= link_to 'отменить', '#', class: 'hide-activity', data: { activity: a.id } %>
                  <% end %>
                </td>
                <td>
                  <%= link_to '#', class: 'btn btn-default add-activity', data: { activity: a.id } do %>
                    <span class="glyphicon glyphicon-check"></span> Выполнено
                  <% end %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>