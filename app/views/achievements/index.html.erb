<div class="page-header">
  <h1>Отчёт за <%= @period.description %></h1>
</div>

<div id="my_achievements">
  <%= render 'achievements' %>
</div>

<% unless @period.achievement_reports.by_user(current_user).only_relevant.any? %>
  <br>

  <div class="page-header">
    <h2>Выберите из&nbsp;показателей эффективности то, что&nbsp;было
      сделано в&nbsp;текущем отчётном периоде</h2>
  </div>

  <%= render 'activities' %>
<% end %>

<br>

<%= link_to '#', class: 'lead scroll-to-top' do %>
  <span class="glyphicon glyphicon-arrow-up"></span> К отчёту
<% end %>