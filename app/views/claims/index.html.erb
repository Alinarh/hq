<h1>Заявки</h1>

<table class="table table-hover">
<thead>
<tr>
  <th>#</th>
  <th>ФИО</th>
  <th>Группа</th>
  <th>Телефон</th>
  <th>Электронная почта</th>
</tr>
</thead>
<tbody>
  <% @events.each do |event, index| %>
    <% next if event.claims.empty? %>
    <tr><td colspan="5"><strong><%= event.name %></strong></td></tr>
    <% event.claims.each_with_index do |claim, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= claim.fname %> <%= claim.iname %> <%= claim.oname %></td>
      <td><%= claim.group.name %></td>
      <td><%= claim.phone %></td>
      <td><%= claim.email %></td>
    </tr>
    <% end %>
  <% end %>
</tbody>
</table>
