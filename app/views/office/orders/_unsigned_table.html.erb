<table class="table table-striped">
  <thead>
  <tr>
    <th>#</th>
    <th>Редактировался</th>
    <th>Тип приказа</th>
    <th colspan="2"></th>
  </tr>
  </thead>
  <tbody>
  <% orders.each do |order| %>
    <tr>
      <td><%= order.id %>&ndash;<%= order.version %></td>
      <td>
        <%= l (order.signed? ? order.signing_date.to_date : order.editing_date) %>
      </td>
      <td><%= order.template.name %></td>
      <td>
        <%= link_for_order(order) %>
      </td>
      <td>
        <%= link_to "#{office_order_path(order)}.pdf" do %>
          <span class='glyphicon glyphicon-print'></span> Распечатать приказ
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>